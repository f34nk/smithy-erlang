{erl_opts, [debug_info]}.

{deps, [
]}.

{profiles, [
    {test, [
        {deps, [
        ]},
        {erl_opts, [
            debug_info,
            {i, "src/generated"}  % Include path for generated headers
        ]},
        {dialyzer, [
            % Include test dependencies in PLT
            {plt_extra_apps, [eunit]},
            {warnings, [unknown, unmatched_returns, error_handling]}
        ]}
    ]}
]}.

{shell, [
    {apps, []}
]}.

{eunit_opts, [verbose]}.

{plugins, [{rebar3_dialyzer_html, "0.3.0"}]}.

{dialyzer, [
    % Enable useful warnings, but not overspecs
    {warnings, [unknown, unmatched_returns, error_handling]},
    % rebar3_dialyzer_html plugin requires raw output format
    {output_format, raw}
]}.
